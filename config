exec --no-startup-id xrandr --output LVDS1 --mode 1366x768  --primary
exec --no-startup-id xrandr --output HDMI2 --mode 1920x1080 --auto --right-of LVDS1
set $monitorLeft  LVDS1
set $monitorRight HDMI2
